@model Library.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Details Book";
}



<div class="row">
    <div class="col-md-6">
        <div class="card border">
            <div class="card-header bg-primary">
                <h3 class="text-white"><strong>Book</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Isbn: </strong>@Html.DisplayFor(a => a.Book.Isbn)</li>
                    <li class="list-group-item"><strong>Title: </strong>@Html.DisplayFor(a => a.Book.Titulo)</li>
                    <li class="list-group-item"><strong>Synopsis: </strong>@Html.DisplayFor(a => a.Book.Sipnosis)</li>
                    <li class="list-group-item"><strong>Number of pages: </strong>@Html.DisplayFor(a => a.Book.NPaginas)</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border">
            <div class="card-header bg-primary">
                <h3 class="text-white"><strong>Editorial</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Id: </strong>@Html.DisplayFor(a => a.Book.Editorial.Id)</li>
                    <li class="list-group-item"><strong>Name: </strong>@Html.DisplayFor(a => a.Book.Editorial.Nombre)</li>
                    <li class="list-group-item"><strong>Headquarters: </strong>@Html.DisplayFor(a => a.Book.Editorial.Sede)</li>
                </ul>
            </div>
        </div>
    </div>

</div>

<br />

<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card border">
            <div class="card-header bg-primary">
                <h3 class="text-white"><strong>Authors</strong></h3>
            </div>
            <div class="card-body">

                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Author Id</th>
                            <th>Firts Name</th>
                            <th>Last Name</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (Autore autor in Model.Autores)
                        {
                            <tr>
                                <td>@autor.Id</td>
                                <td>@autor.Nombre</td>
                                <td>@autor.Apellidos</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-3">
        <a asp-controller="Book" asp-action="Index">Go to Book</a>
    </div>
</div>
